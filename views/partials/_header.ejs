<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="navbar-nav">
      <% if(email){ %>
      <form method="POST" action="/logout" class="form-inline ml-auto">
        <span class="navbar-text mr-2">Welcome, <%= email %>!</span>
        <button type="submit" class="btn btn-outline-light">Logout</button>
      </form>
      <% } else{ %>
      <form method="POST" action="/register" class="form-inline ml-auto">
        <a class="nav-item nav-link" href="/register">Create An Account</a>
      </form>
      <form method="POST" action="/login" class="form-inline ml-auto">
        <a class="nav-item nav-link" href="/login">Login</a>
      </form>
      <% } %>
    </div>
  </nav>
</header>
